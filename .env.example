# Server Environment Variables
# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/giftrove

# Authentication
JWT_SECRET=your_super_secret_key_here
JWT_EXPIRY=24h

# Server Configuration
PORT=3000
NODE_ENV=development

# Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=25000000  # 25MB in bytes
ALLOWED_FILE_TYPES=image/gif

# Rate Limiting
RATE_LIMIT_WINDOW=15    # Time window in minutes
RATE_LIMIT_MAX=100      # Maximum requests per window
AUTH_RATE_LIMIT_MAX=20  # Maximum auth requests per window

# Security
CORS_ORIGIN=http://localhost:5173
SECURE_COOKIES=false    # Set to true in production

# Storage Management
MIN_DISK_SPACE=100     # Minimum free disk space in MB
MAX_UPLOAD_FILES=5     # Maximum files per upload

# Client Environment Variables
VITE_API_URL=http://localhost:3000
VITE_MAX_FILE_SIZE=25000000
VITE_GITHUB_REPO=rohitg00/my-own-whiteboard
